<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chinh.firebase_datn.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tieude"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Smart Anti Theft"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tieude"
        android:layout_marginTop="20dp"
        android:textSize="80dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/temp"
        android:textStyle="italic"
        android:gravity="center"
        android:textSize="20dp"/>

    <ToggleButton
        android:id="@+id/toggle_led"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textOff="LED OFF"
        android:textOn="LED ON" />

    <ToggleButton
        android:id="@+id/toggle_door"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/toggle_led"
        android:layout_alignBottom="@+id/toggle_led"
        android:layout_alignParentEnd="true"
        android:textOff="DOOR CLOSE"
        android:textOn="DOOR OPEN" />

    <ToggleButton
        android:id="@+id/toggle_guest"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toggle_led"
        android:layout_marginTop="20dp"
        android:textOff="GUEST OFF"
        android:textOn="GUEST ON" />

    <ToggleButton
        android:id="@+id/toggle_waring"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/toggle_guest"
        android:layout_alignBottom="@+id/toggle_guest"
        android:layout_alignParentEnd="true"
        android:textOff="WARNING OFF"
        android:textOn="WARNING ON"/>

